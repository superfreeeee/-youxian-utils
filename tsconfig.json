{
  "compilerOptions": {
    "lib": ["ES2020", "DOM"],
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationDir": "lib",
    "esModuleInterop": true,
    "baseUrl": ".",
    "jsx": "react",
    "paths": {
      "@*": ["src/*"],
      "@utils": ["src/utils"],
      "@hooks": ["src/hooks"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["src/**/__tests__/**"]
}
